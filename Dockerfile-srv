FROM debian:stretch-slim

VOLUME /data
ENV TERM xterm

RUN apt-get update && \
    apt-get install -yq --no-install-recommends glusterfs-server && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* 

RUN mkdir -p /etc/glusterfs
COPY ./server.sh /etc/glusterfs
RUN chmod ug+x /etc/glusterfs/server.sh
CMD ["/etc/glusterfs/server.sh"]
