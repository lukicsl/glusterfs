FROM debian:stretch-slim

COPY glusterd.service /etc/systemd/system/glusterd.service

RUN apt-get update && \
    apt-get install -yq --no-install-recommends glusterfs-server systemd && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* && \    
    systemctl enable glusterd.service

CMD ["systemctl start glusterd.service"]
